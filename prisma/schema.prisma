model Query {
  id        String   @id @default(cuid())
  query     String
  response  String
  papers    Paper[]
  createdAt DateTime @default(now())
}

model Paper {
  id         String   @id
  title      String
  abstract   String
  authors    String[]
  categories String[]
  published  DateTime
  updated    DateTime
  pdfUrl     String
  queries    Query[]
}